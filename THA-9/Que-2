<script>
document.getElementById("demo").addEventListener("click", myFunction);

function myFunction() {
  document.getElementById("demo").innerHTML = "HELLO EVERYONE!";
}
function myFunction1() {
  document.getElementById("demo1").innerHTML = "Hello World!";
}
</script>
